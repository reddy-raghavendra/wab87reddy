extends layout

block content
  h1= title 
  p #{query.rows} #{query.cols}
  - let rows = Number(query.rows)
  - let cols = Number(query.cols)
  - if(!Number.isInteger(rows) || !Number.isInteger(cols)){
        p Rows and Columns should be integer
  - }
  - if(rows < 1 || rows > 4){
        p Rows should be in the range of 1 to 4  
  - }
  - else if(cols < 1 || cols > 4){
        p Columns shoulb be in the range of 1 to 4
  - }
  - else
        table(id="outer")
            -   for(let i =0; i<rows; i++){
                    tr#middle
                        -   for(let j=0; j<cols; j++){
                                td= i+j
                        -   }                    
            -   }